{
	"name": "shell-man",
	"displayName": "shell-man",
	"description": "manager shell scripts for VS Code",
	"version": "0.0.1",
	"publisher": "panda20160914",
	"repository": "https://github.com/angrypandahu/shell-man",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "shell_man_command.refresh",
				"title": "刷新命令列表",
				"icon": "$(refresh)"
			},
			{
				"command": "shell_man_favorite.refresh",
				"title": "刷新收藏列表",
				"icon": "$(refresh)"
			},
			{
				"command": "shell_man_last_run.refresh",
				"title": "刷新最近执行列表",
				"icon": "$(refresh)"
			},
			{
				"command": "shell_man_common.showLogs",
				"title": "显示日志",
				"icon": "$(output)"
			},
			{
				"command": "shell_man_common.execute",
				"title": "执行命令",
				"icon": "$(play)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "shellManContainer",
					"title": "Shell 命令管理器",
					"icon": "$(terminal-bash)"
				}
			]
		},
		"views": {
			"shellManContainer": [
				{
					"id": "shell_man_command",
					"name": "Shell 命令",
					"icon": "$(terminal-bash)",
					"contextualTitle": "Shell 命令"
				},
				{
					"id": "shell_man_favorite",
					"name": "我的收藏",
					"icon": "$(star)",
					"contextualTitle": "我的收藏"
				}
				,
				{
					"id": "shell_man_last_run",
					"name": "最近执行",
					"icon": "$(history)",
					"contextualTitle": "最近执行"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "shell_man_command.refresh",
					"when": "view == shell_man_command",
					"group": "navigation"
				},
				{
					"command": "shell_man_favorite.refresh",
					"when": "view == shell_man_favorite",
					"group": "navigation"
				},
				{
					"command": "shell_man_last_run.refresh",
					"when": "view == shell_man_last_run",
					"group": "navigation"
				},
				{
					"command": "shell_man_common.showLogs",
					"when": "view == shell_man_command || view == shell_man_favorite",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "shell_man_common.execute",
					"when": "viewItem == command || viewItem == case",
					"group": "inline",
					"icon": "$(play)"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^20",
		"@types/vscode": "^1.73.0",
		"eslint": "^9.13.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	}
}